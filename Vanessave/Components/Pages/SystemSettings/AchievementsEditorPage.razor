@page "/system-settings/achievements-editor"
@using Vanessave.Shared.Models.Nobeta

<MudText Typo="Typo.h3" Class="mb-6">Achievements</MudText>

<SystemSettingsEditor @ref="_systemSettingsEditor" HideDividerWhenLoaded="true">
    <TitleContent>
        <pre style="text-wrap: wrap"><MudText>
        <MudAlert Severity="Severity.Info" Class="mt-4">A restart of the game is needed in order to reload achievements.

Manually editing achievements doesn't work with Steam. You need to use a tool like <MudLink Href="https://github.com/gibbed/SteamAchievementManager">SteamAchievementManager</MudLink>.</MudAlert>
        </MudText></pre>

        <MudText Class="my-4">This tool allows you to unlock or lock achievements.</MudText>
    </TitleContent>
    <LoadedContent>
        <AchievementsEditor SystemSettings="SystemSettings" />
    </LoadedContent>
</SystemSettingsEditor>

@code {
    private SystemSettings SystemSettings => _systemSettingsEditor.SystemSettings!;

    private SystemSettingsEditor _systemSettingsEditor = null!;
}