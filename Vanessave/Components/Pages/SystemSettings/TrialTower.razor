@page "/system-settings/trial-tower"
@using Vanessave.Nobeta

<MudText Typo="Typo.h3" Class="mb-6">Trial Tower</MudText>

<SystemSettingsEditor @ref="_systemSettingsEditor">
    <TitleContent>
        <pre><MudText>
        <MudAlert Severity="Severity.Warning" Class="mt-4">A restart of the game is needed for the changes to take effect.</MudAlert>
        </MudText></pre>

        <MudText Class="mt-4">This tool allows you to modify global Trial Tower stats.</MudText>

        <MudText Class="mt-4">Some of those stats allow to unlock skins in-game.</MudText>
    </TitleContent>
    <LoadedContent>
        <MudPaper Outlined="true" Class="pa-4">
            <MudStack Spacing="2">
                <MudCheckBox @bind-Value="@SystemSettings.BossRushTitleTips" Label="Trial Tower Title Tips (message shown when first unlocking Trial Tower)" Color="Color.Primary"/>
                <MudCheckBox @bind-Value="@SystemSettings.BossRushMaximumMagic" Label="Maximum Magic (unlocks Monica skin)" Color="Color.Primary"/>
                <MudDivider DividerType="DividerType.FullWidth" Class="mt-1 mb-3"/>
                <MudNumericField @bind-Value="@SystemSettings.BossRushCleared" Label="Clear Count (at least 1 to unlock Black Cat and Tania skins)"/>
                <MudNumericField @bind-Value="@SystemSettings.BossRushPerfectCleared" Label="Perfect Clear Count (at least 1 to unlock Vanessa skin)"/>
                <MudNumericField @bind-Value="@SystemSettings.BossRushBestDeadCount" Label="Best Dead Count"/>
                <MudNumericField @bind-Value="@SystemSettings.BossRushBestClearedTime" Label="Best Cleared Time"/>
            </MudStack>
        </MudPaper>
    </LoadedContent>
</SystemSettingsEditor>

@code {
    private SystemSettings SystemSettings => _systemSettingsEditor.SystemSettings!;

    private SystemSettingsEditor _systemSettingsEditor = null!;
}