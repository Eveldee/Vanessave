@page "/system-settings/video-unlocker"
@using Vanessave.Shared.Nobeta

<MudText Typo="Typo.h3" Class="mb-6">Video Unlocker</MudText>

<SystemSettingsEditor @ref="_systemSettingsEditor">
    <TitleContent>
        <pre><MudText>
        <MudAlert Severity="Severity.Info" Class="mt-4">A restart of the game is needed in order to unlock the videos.</MudAlert>
        </MudText></pre>

        <MudText Class="mt-4">This tool allows you to unlock extra bonus videos chapters that are normally unlocked by collecting items.</MudText>

        <MudText Class="mt-4">Note that some of those properties are not used by the game. Maybe in a later update?</MudText>
    </TitleContent>
    <LoadedContent>
        <MudPaper Outlined="true">
            <VideoUnlocker SystemSettings="SystemSettings"/>
        </MudPaper>
    </LoadedContent>
</SystemSettingsEditor>

@code {
    private SystemSettings SystemSettings => _systemSettingsEditor.SystemSettings!;

    private SystemSettingsEditor _systemSettingsEditor = null!;
}