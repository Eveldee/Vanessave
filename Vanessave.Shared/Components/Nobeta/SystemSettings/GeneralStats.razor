    <MudNumericField @bind-Value="@SystemSettings.MeleeSpellcasting" Label="Melee Spell Casting" Immediate="true"/>
    <MudNumericField @bind-Value="@SystemSettings.ManaAbsorbed" Label="Mana Absorbed" Immediate="true"/>
    <MudNumericField @bind-Value="@SystemSettings.SoulAcquired" Label="Souls Acquired" Immediate="true"/>
